{
  "compilerOptions": {
      "lib": ["es2018", "dom", "es6", "ES2015","es7"],
      "module": ["commonjs", "es6"],
      "esModuleInterop": true,
      "target": ["es6" ,"es7","es5"],
    "noImplicitAny": false,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}